<table class="careers">
  <tr>
  	<td class="career_links">
  	  <%= render 'pages/career_links' %>
  	</td>
  	<td class="career_summary">
  	  <div>
  	    <p><%= career_summary %></p>
  	  </div>
  	  <div class="careers" id="c1" style="display: none;">
  	    <%= render 'careers/c1' %><br />
  	  </div>
  	  <div class="careers" id="c2" style="display: none">
  	    <%= render 'careers/c2' %><br />
  	  </div>
  	  <div class="careers" id="c3" style="display: none">
  	    <%= render 'careers/c3' %><br />
  	  </div>
  	  <div>
  	  	<p>To apply for a position, please send a short cover letter and resume to <%= mail_to('hr@seeo.com', 'hr@seeo.com', :subject => "SEEO Careers: Requisition \#") %>. Please include the requisition number in the subject of your email.</p>
  	  </div>
  	</td>
  </tr>
</table>

<% content_for :stylesheets do %>
  #careers {color: #09c;
  		    text-shadow: 1px 1px 1px #C8C8C8;}
  section {padding-bottom: 100px;}
<% end %>

<script>
$(document).ready(function() 
{
  $("div.page_label").fadeIn(800);
});
</script>